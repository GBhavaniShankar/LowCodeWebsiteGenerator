<div class="container">
  <div class="profile-card">
    <h2 style="margin-bottom: 2rem; border-bottom: 1px solid #eee; padding-bottom: 1rem;">My Profile</h2>
    
    <div class="profile-field">
      <span class="label">Email Address</span>
      <div class="value">{{ email }}</div>
    </div>

    <div class="profile-field">
      <span class="label">Account Role</span>
      <div class="value">
        <span class="role-badge">{{ role }}</span>
      </div>
    </div>

    <div class="profile-field" style="margin-top: 2rem; padding-top: 1rem; border-top: 1px solid #eee;">
      <span class="label">Account Status</span>
      <div class="value" style="color: green;">Active</div>
    </div>
  </div>
</div>